{
  "name": "vibe-science",
  "version": "1.2.0",
  "description": "Scientific research in serendipity mode. Infinite loops until discovery, rigorous tracking, adversarial review.",
  "author": "Vibe Science Contributors",

  "project_memory": "PROJECT-MEMORY.md",

  "triggers": [
    "scientific research",
    "literature review",
    "research gap",
    "hypothesis validation",
    "serendipity",
    "vibe science"
  ],

  "commands": {
    "init": {
      "description": "Initialize a new research session",
      "file": "commands/init.md"
    },
    "loop": {
      "description": "Execute one research cycle",
      "file": "commands/loop.md"
    },
    "reviewer2": {
      "description": "Invoke adversarial review",
      "file": "commands/reviewer2.md",
      "args": ["--batch", "--final", "--pivot"]
    },
    "search": {
      "description": "Literature search across databases",
      "file": "commands/search.md",
      "args": ["--scopus", "--pubmed", "--openalex", "--author", "--citations"]
    },
    "compact": {
      "description": "Force context compaction",
      "file": "config/compaction.md"
    },
    "resume": {
      "description": "Resume from last saved state",
      "file": "commands/init.md"
    }
  },

  "prompts": {
    "researcher": {
      "description": "Primary researcher persona - load at session start",
      "file": "prompts/researcher.md"
    },
    "reviewer2": {
      "description": "Adversarial reviewer persona - spawned as subagent",
      "file": "commands/reviewer2.md"
    }
  },

  "templates": {
    "STATE.md": "templates/STATE.md",
    "PROGRESS.md": "templates/PROGRESS.md",
    "SERENDIPITY.md": "templates/SERENDIPITY.md",
    "RQ.md": "templates/RQ.md",
    "FINDING.md": "templates/FINDING.md",
    "REVIEWER2-SESSION.md": "templates/REVIEWER2-SESSION.md",
    "SEARCH-LOG.md": "templates/SEARCH-LOG.md",
    "SUPPLEMENTARY-LOG.md": "templates/SUPPLEMENTARY-LOG.md",
    "CONCLUSION.md": "templates/CONCLUSION.md"
  },

  "config": {
    "apis": {
      "description": "API configuration for Scopus, PubMed, OpenAlex (Core)",
      "file": "config/apis.md"
    },
    "apis_wos": {
      "description": "Web of Science API (Phase 2)",
      "file": "config/apis-wos.md"
    },
    "apis_reaxys": {
      "description": "Reaxys API - NO REST API available",
      "file": "config/apis-reaxys.md"
    },
    "apis_jcr": {
      "description": "Journal Citation Reports API (Phase 2)",
      "file": "config/apis-jcr.md"
    },
    "apis_espacenet": {
      "description": "Esp@cenet Patents API (Phase 3)",
      "file": "config/apis-espacenet.md"
    },
    "apis_torrossa": {
      "description": "Torrossa API - LIMITED (Phase 3)",
      "file": "config/apis-torrossa.md"
    },
    "knowledge_base": {
      "description": "Researcher's persistent bagaglio scientifico",
      "file": "config/knowledge-base.md"
    },
    "decision_framework": {
      "description": "Priority order for research decisions",
      "file": "config/decision-framework.md"
    },
    "architecture": {
      "description": "Loop architecture design rationale",
      "file": "config/architecture.md"
    },
    "deviation_rules": {
      "description": "When and how to deviate from plan",
      "file": "config/deviation-rules.md"
    },
    "compaction": {
      "description": "Context management and compaction strategy",
      "file": "config/compaction.md"
    }
  },

  "mcp_servers": {
    "architecture": {
      "description": "MCP servers design for academic databases",
      "file": "mcp-servers/ARCHITECTURE.md"
    },
    "template": {
      "description": "Template for creating new MCP servers",
      "file": "mcp-servers/TEMPLATE.md"
    },
    "implementation_priority": {
      "phase1_core": ["scopus", "pubmed", "openalex", "notebooklm"],
      "phase2_extended": ["wos", "jcr"],
      "phase3_specialized": ["espacenet"],
      "not_feasible": ["reaxys", "torrossa"]
    }
  },

  "examples": {
    "uot-crispr": {
      "description": "Complete session walkthrough: UOT for CRISPR off-target",
      "file": "examples/uot-crispr-session.md"
    }
  },

  "requirements": {
    "apis": ["scopus", "pubmed", "openalex"],
    "tools": ["WebFetch", "Bash", "Read", "Write", "Task"]
  },

  "folder_structure": {
    ".vibe-science/": {
      "STATE.md": "Current session state (max 100 lines)",
      "PROGRESS.md": "Append-only log of all actions",
      "SERENDIPITY.md": "Unexpected discoveries log",
      "RQ-XXX-[slug]/": {
        "RQ.md": "Research question definition",
        "FINDINGS.md": "Accumulated findings",
        "01-discovery/": "Literature discovery phase",
        "02-analysis/": "Pattern analysis phase",
        "03-data/": "Data extraction phase",
        "04-validation/": "Numerical validation phase",
        "05-reviewer2/": "Adversarial review sessions"
      }
    }
  },

  "architecture": {
    "type": "hybrid",
    "primary_agent": "researcher",
    "subagents": ["reviewer2"],
    "rationale": "Research needs continuity. Review needs fresh eyes."
  },

  "decision_priority": [
    "1. Data Availability (GATE - must pass)",
    "2. Impact Potential (filter)",
    "3. Technical Feasibility (filter)",
    "4. Publication Speed (nice to have)"
  ],

  "core_principles": [
    "Biologia teorica + validazione con dati. Senza conferme numeriche, si lascia perdere.",
    "NO DATA = NO GO",
    "Never present information without a verified source",
    "Reviewer 2 challenges all major findings",
    "Track everything in .md files for context persistence",
    "Serendipity is a feature, not a bug",
    "Deviate freely for tactical decisions, stop for strategic ones",
    "Compact early, compact often"
  ]
}
